{% extends main_template %}

{% block content %}
<div class="container">
      <div class="row">
        <div class="col s12 m12">
          <div class="card">
            <div class="card-content view-card" style="min-height: 100%;">
                <div class="row">
                    <div class="col s6 m4" id="logo">
                        <img class="responsive-img" src="{{request.static_url('beepaste:static/img/err.png')}}">
                    </div>
                    <div class="col s6 m8 valign-wrapper" id="message">
                        <div class="valign">
                            <h2 class="error-notfound">404: Page Not Found</h2>
                            <h5>Check the url or if there is a bug, report it to <a href="https://github.com/beepaste">BeePaste</a></h5>
                            <span><a href="/"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i> return to the home page</a></span>
                        </div>
                    </div>
                    <script>
                        var H = $('#logo').height();
                        $('#message').css({'height': H});
                    </script>
                </div>
            </div>
          </div>
        </div>
      </div>
      <!--<script type="text/javascript" src="{{request.static_url('beepaste:static/js/ace/ace.js')}}"></script>-->
      <script type="text/javascript" src="https://cdn.jsdelivr.net/ace/1.2.6/min/ace.js"></script>
      <script type="text/javascript" src="{{request.static_url('beepaste:static/js/beepaste-view.js')}}"></script>
</div>
{% endblock content %}
